doctype html
html(lang='en')
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='/searchScript.js')
    script(src="https://kit.fontawesome.com/3182f213ea.js" crossorigin="anonymous")
    
  body
    div(class="container-fluid")
      div(class="row")
        div(class="col-12 p-0")
          block navbar
                nav(class='header navbar navbar-expand-lg navbar-dark bg-dark')
                 a(class="navbar-brand mr-5 " href="/produkte/") 
                  p(class="logo font-weight-light") Der Gewürzkönig
                 
               
  

                 div(class="collapse navbar-collapse justify-content-center" id="navbarSupportedContent")
                  form(class="form-inline my-2 my-lg-0 " onSubmit="return doSearch()")
                   input(class="search-input form-control mr-sm-2" type="search" placeholder="Suche" id="searchBtn" size="50" maxlength="50")
                   button(class="btn btn-outline-warning my-2 my-sm-0" type="submit") Suche
                   
                 div(class="icon-area")
                  a(class="m-2 icon" href='/nutzer/wunschliste') 
                    i(class="fas fa-heart orange-color")
                  a(class="m-2 icon" href='/nutzer/warenkorb') 
                    i(class="fas fa-shopping-cart orange-color")
                  a(class="m-2 icon" href='/nutzer/registrieren') 
                    i(class="fas fa-user orange-color")
                  button( class="btn btn-light orange-color m-2" data-toggle="modal" data-target="#loginModal") 
                   i(class="fas fa-sign-in-alt")
                  button(class="navbar-toggler btn btn-light" type="button" data-toggle="collapse" data-target="#navbarSupportedContent")
                   span(class="navbar-toggler-icon")   
        div(class="col-12 p-0")
               nav(class="navbar navbar-expand-sm bg-dark products")
                ul(class="navbar-nav mr-auto") 
                 li(class="nav-item")
                  a(class="products-item nav-link" href='/produkte/gewuerze/suche') Gewürze & Kräuter
                 li(Class="nav-item")
                  a(class="products-item nav-link" href='/produkte/gewuerze') Alle Datenbankeintäge
                 li(class="nav-item")
                  a(class="products-item nav-link" href='/produkte/gewuerze/anlegen') Gewürz anlegen
                 li(class="nav-item")
                  a(class="products-item nav-link" href='/produkte/neuigkeiten') Neuigkeiten
        div(class="col-12 p-0")
         block content

         block login
          div(class="modal fade" id="loginModal",tabindex="-1",role="dialog",aria-labelledby=id+"Label" aria-hidden="true")
            div(class="modal-dialog")
              div(class="modal-content")
                div(class="modal-header")
                  h4(class="modal-title") Einloggen
                div(class="modal-body")
                 form(method="POST" action='/nutzer/login')
                  div(class="form-group")
                    label(for="email" class="col-form-label") Email:
                    input(type="email" class="form-control" id="email" name="email")
                  
                  div(class="form-group")
                    label(for="password" class="col-form-label") Passwort:
                    input(type="password" class="form-control" id="password" name="password")
              
                  div(class="modal-footer")
                    input(class="btn btn-primary" type="submit" value="Submit")
                    button(class="btn btn-secondary" type="button" data-dismiss="modal") Zurück